<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_12dp">

    <ImageView
        android:id="@+id/image_item"
        android:layout_width="@dimen/_50dp"
        android:layout_height="@dimen/_50dp"
        android:src="@drawable/image_loading_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_name_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_12dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/text_size_16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/image_item"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/string_default" />

    <TextView
        android:id="@+id/text_view_price_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_12dp"
        android:textColor="@color/color_red"
        android:textSize="@dimen/text_size_14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/image_item"
        app:layout_constraintStart_toEndOf="@id/image_item"
        tools:text="@string/string_default" />

    <TextView
        android:id="@+id/text_view_amount_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_12dp"
        android:textSize="@dimen/text_size_14sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@id/image_item"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@string/string_default" />
</androidx.constraintlayout.widget.ConstraintLayout>
